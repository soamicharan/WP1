<p id="notice"><%= notice %></p>

<h1>Candidates</h1>

<table>
  <thead>
    <tr>
      <th>Date of registration</th>
      <th>Date of closure</th>
      <th>Address</th>
      <th>Age</th>
      <th>Branch</th>
      <th>Contact number</th>
      <th>Email</th>
      <th>Experience</th>
      <th>Gender</th>
      <th>Name</th>
      <th>Qualification</th>
      <th>Registration number</th>
      <th>Remarks</th>
      <th>Specialization</th>
      <th>Source of registration</th>
      <th>State</th>
      <th>Status</th>
      <th>Zone</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @candidates.each do |candidate| %>
      <tr>
        <td><%= candidate.date_of_registration %></td>
        <td><%= candidate.date_of_closure %></td>
        <td><%= candidate.address %></td>
        <td><%= candidate.age %></td>
        <td><%= candidate.branch %></td>
        <td><%= candidate.contact_number %></td>
        <td><%= candidate.email %></td>
        <td><%= candidate.experience %></td>
        <td><%= candidate.gender %></td>
        <td><%= candidate.name %></td>
        <td><%= candidate.qualification %></td>
        <td><%= candidate.registration_number %></td>
        <td><%= candidate.remarks %></td>
        <td><%= candidate.specialization %></td>
        <td><%= candidate.source_of_registration %></td>
        <td><%= candidate.state %></td>
        <td><%= candidate.status %></td>
        <td><%= candidate.zone %></td>
        <td><%= link_to 'Show', candidate %></td>
        <td><%= link_to 'Edit', edit_candidate_path(candidate) %></td>
        <td><%= link_to 'Destroy', candidate, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Candidate', new_candidate_path %>
